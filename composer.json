		"nette/robot-loader"	: "~2.2",
		"nette/safe-stream"	: "~2.2",
		"nette/tester"		: "@dev",
		"tracy/tracy"		: "@dev",
		"janmarek/mockista"	: "@dev"
	},

	"autoload": {
		"psr-0": {
			"IPub\\MobileDetect\\": "src/"
		}
	}
}
